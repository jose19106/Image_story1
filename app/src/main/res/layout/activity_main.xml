<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.escobedo.jees.image_story.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masterchief"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/masterchief" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/casco"
        android:src="@drawable/casco"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/halo2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/halo2"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me!"
        android:id="@+id/firstButton"
        android:layout_alignTop="@+id/casco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="fade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next!"
        android:id="@+id/secondButton"
        android:layout_alignTop="@+id/casco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="movecasco" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset!"
        android:id="@+id/resetButton"
        android:layout_alignBottom="@+id/casco"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="resetImages" />
</RelativeLayout>
